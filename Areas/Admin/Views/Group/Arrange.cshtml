@using AppFoods.Models

@{
    ViewData["Title"] = "Sắp xếp danh sách";
}

<div class="mb-4 d-flex align-items-center">
    <a asp-controller="Home" asp-action="AdminIndex" class="text-dark"><i class="fa-solid fa-house px-2"></i>Trang chủ</a>
    <i class="fa-solid fa-chevron-left px-2"></i>
    <a asp-action="Index" class="text-dark"> Danh sách nhóm</a>
</div>

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-8 border-dark border-end">
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>#</th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.Name) *@
                        Tên nhóm
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.Parent) *@
                        Nhóm cha
                    </th>
                </tr>
            </thead>
            <tbody>
        @{
            int i = 1;
        }
        @foreach (Group item in ViewBag.Groups) {
                    <tr class="">
                        <td>@(i++)</td>
                        <td>
                        @Html.Raw((item.Name).Replace("-", "&nbsp;&nbsp;"))
                            @* @Html.DisplayFor(modelItem => item.Name) *@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Parent.Name)
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="col-md-4">
       <form asp-action="Arrange" method="post">
            <h4 class="text-center">Thay đổi vị trí</h4>
            <div class="mb-3">
                <label for="vt1" class="form-label">Vị trí 1</label>
                <select name="vt1" id="vt1" asp-items="@ViewBag.SelectListGroups" class="form-control">
                    <option value="-1" selected>Chọn nhóm 1</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="vt2" class="form-label">Vị trí 2</label>
                <select name="vt2" id="vt2" asp-items="@ViewBag.SelectListGroups" class="form-control">
                    <option value="-1" selected>Chọn nhóm 2</option>
                </select>
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn btn-warning">Thay đổi</button>
            </div>
       </form>
    </div>
</div>


